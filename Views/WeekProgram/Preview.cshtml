@model IEnumerable<KiddieParadies.ViewModels.WeekProgramPreviewViewModel>

@section styles{
    <style>
        body {
            margin-top: 20px;
        }

        .bg-light-gray {
            background-color: #f7f7f7 !important;
        }

        .table-bordered thead td, .table-bordered thead th {
            border-bottom-width: 2px;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }

        .table-bordered td, .table-bordered th {
            border: 1px solid #dee2e6;
        }


        .bg-sky.box-shadow {
            box-shadow: 0px 5px 0px 0px #00a2a7
        }

        .bg-orange.box-shadow {
            box-shadow: 0px 5px 0px 0px #af4305
        }

        .bg-green.box-shadow {
            box-shadow: 0px 5px 0px 0px #4ca520
        }

        .bg-yellow.box-shadow {
            box-shadow: 0px 5px 0px 0px #dcbf02
        }

        .bg-pink.box-shadow {
            box-shadow: 0px 5px 0px 0px #e82d8b
        }

        .bg-purple.box-shadow {
            box-shadow: 0px 5px 0px 0px #8343e8
        }

        .bg-lightred.box-shadow {
            box-shadow: 0px 5px 0px 0px #d84213
        }


        .bg-sky {
            background-color: #02c2c7
        }

        .bg-orange {
            background-color: #e95601
        }

        .bg-green {
            background-color: #5bbd2a
        }

        .bg-yellow {
            background-color: #f0d001
        }

        .bg-pink {
            background-color: #ff48a4
        }

        .bg-purple {
            background-color: #9d60ff
        }

        .bg-lightred {
            background-color: #ff5722
        }

        .padding-15px-lr {
            padding-left: 15px;
            padding-right: 15px;
        }

        .padding-5px-tb {
            padding-top: 5px;
            padding-bottom: 5px;
        }

        .margin-10px-bottom {
            margin-bottom: 10px;
        }

        .border-radius-5 {
            border-radius: 5px;
        }

        .margin-10px-top {
            margin-top: 10px;
        }

        .font-size14 {
            font-size: 14px;
        }

        .text-light-gray {
            color: #d6d5d5;
        }

        .font-size13 {
            font-size: 13px;
            margin-top: 10px;
        }

        .table-bordered td, .table-bordered th {
            border: 1px solid #dee2e6;
        }

        .table td, .table th {
            padding: .75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        tbody {
            border-width: 3px;
        }
    </style>
}


<div class="container">
    <div class="text-center">
        <img alt="">
    </div>

    <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead>
                <tr class="bg-light-gray">
                    <th class="text-uppercase">
                        التوقيت
                    </th>
                    <th class="text-uppercase">08:00 - 08:30</th>
                    <th class="text-uppercase">08:45 - 09:15</th>
                    <th class="text-uppercase">09:45 - 10:15</th>
                    <th class="text-uppercase">10:30 - 11:00</th>
                    <th class="text-uppercase">11:30 - 12:00</th>
                    <th class="text-uppercase">12:15 - 12:45</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    int index = 0;
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            @if (i == 1)
                            {
                                <td class="align-middle" style="font-size: 25px;">الأحد</td>
                            }
                            @if (i == 2)
                            {
                                <td class="align-middle" style="font-size: 25px;">الإثنين</td>
                            }
                            @if (i == 3)
                            {
                                <td class="align-middle" style="font-size: 25px;">الثلاثاء</td>
                            }
                            @if (i == 4)
                            {
                                <td class="align-middle" style="font-size: 25px;">الأربعاء</td>
                            }
                            @if (i == 5)
                            {
                                <td class="align-middle" style="font-size: 25px;">الخميس</td>
                            }
                            @for (int j = 1; j <= 6; j++)
                            {
                                string[] colors = new string[] { "bg-lightred", "bg-purple", "bg-pink", "bg-yellow", "bg-green", "bg-orange", "bg-sky" };

                                if (string.IsNullOrWhiteSpace(Model.ElementAt(index).Course))
                                {
                                    <td class="bg-light-gray"></td>
                                }
                                else
                                {
                                    var colIndex = (new Random().Next(0, colors.Length - 1));
                                    <td>
                                        <span class="@colors[colIndex] padding-5px-tb padding-15px-lr border-radius-5 margin-10px-bottom text-white font-size16  xs-font-size13">@Model.ElementAt(index).Course</span>
                                        <div class="font-size13 text-muted">@Model.ElementAt(index).Teacher</div>
                                    </td>
                                }
                                index++;
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
