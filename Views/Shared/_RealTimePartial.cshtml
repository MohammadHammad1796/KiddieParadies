@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using KiddieParadies.Core.Models
@inject SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User) && User.Claims.Any(c => c.Type == ClaimTypes.Role))
{

    <style>

        @@media only screen and (max-width: 700px) {
            .chat-main {
                position: fixed !important;
                width: 270px !important;
                bottom: 10px !important;
                right: 150px !important;
                background: white !important;
                padding: 0px !important;
                border: 1px solid #4267B2 !important;
                border-radius: 5px !important;
            }
        }

        @@media only screen and (max-width: 500px) {
            .chat-main {
                position: fixed !important;
                width: 90% !important;
                right: 5% !important;
                bottom: 10px !important;
                background: white !important;
                padding: 0px !important;
                border: 1px solid #4267B2 !important;
                border-radius: 5px !important;
            }

            .chat-container {
                width: 100% !important;
            }
        }

        .chat-main {
            position: fixed;
            width: 270px;
            bottom: 10px;
            right: 200px;
            background: white;
            padding: 0px;
            border: 1px solid #4267B2;
            border-radius: 5px;
        }

            .chat-main .col-xs-6 {
                width: 50% !important;
            }

        .chat-header {
            background: #4267B2;
            padding-top: 1px;
            padding-bottom: 1px;
        }

        .username i {
            font-size: 9px;
        }

        .username h6 {
            display: inline-block;
            font-size: 12px;
            font-weight: 600;
        }

        .options i {
            font-size: 14px;
            font-weight: normal;
            opacity: 0.7;
        }

        .options .live-video {
            font-size: 6px;
        }

        .chats {
            height: 260px;
            overflow-x: scroll;
            overflow-x: hidden;
        }

            .chats ul li {
                list-style: none;
                clear: both;
                font-size: 13px;
                padding: 3px;
            }

            .chats .send-msg {
                float: right;
                margin-right: 5px;
            }

            .chats p {
                padding: 3px;
            }

        .chat-main .fa {
            cursor: pointer;
        }

        .receive-msg img {
            border-radius: 100%;
            height: 30px;
            width: 30px;
            float: left;
            margin-right: 5px;
            max-width: 15%;
            border: solid 0.1px #888;
        }

        .receive-msg-img {
            display: inline;
        }

        .receive-msg .receive-msg-desc {
            display: inline-block;
        }

        .chats > ul > li > div {
            float: left;
        }

        .receive-msg .receive-msg-desc p {
            background: #c1c1c1;
        }

        .message-box input {
            border: none;
            font-size: 13px;
            opacity: 0.7;
        }

            .message-box input:focus {
                outline: none;
            }

        .tools i {
            color: #a1a1a1;
            cursor: pointer;
            font-size: 20px;
            margin-right: 6px;
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-typeahead/2.11.0/jquery.typeahead.css">


    <style>
        .twitter-typeahead {
            width: 100% !important;
        }

        /*.tt-query, .tt-input,*/ /* UPDATE: newer versions use tt-input instead of tt-query */
        .tt-hint {
            width: 396px;
            height: 30px;
            padding: 8px 12px;
            font-size: 24px;
            line-height: 30px;
            border: 2px solid #ccc;
            border-radius: 8px;
            outline: none;
        }

        .tt-query, .tt-input { /* UPDATE: newer versions use tt-input instead of tt-query */
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        }

        .tt-hint {
            color: #999;
        }

        .tt-menu { /* UPDATE: newer versions use tt-menu instead of tt-dropdown-menu */
            width: 95% !important;
            right: 2.5%;
            margin-top: 12px;
            padding: 8px 0;
            background-color: #fff;
            border: 1px solid #ccc;
            border: 1px solid rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            box-shadow: 0 5px 10px rgba(0,0,0,.2);
        }

        /*.tt-suggestion {
            padding: 3px 20px;
            font-size: 18px;
            line-height: 24px;
        }*/

        .tt-suggestion.tt-is-under-cursor { /* UPDATE: newer versions use .tt-suggestion.tt-cursor */
            color: #fff;
            background-color: #0097cf;
        }

        .tt-suggestion p {
            margin: 0;
        }

        .tt-dataset {
            padding-right: 10px;
        }
    </style>

    <input type="hidden" id="signalRConnectionId" />



    <div class="container chat-container" style="width: 0px;">
        <div class="row pt-3">
            <div class="chat-main" style="display: none;">
                <div class="col-md-12 chat-header rounded-top bg-primary text-white">
                    <div class="row">
                        <div class="col-xs-6 username pl-2">
                            <!--i class="fa fa-circle text-success" aria-hidden="true"></i-->
                            <h6 class="m-0" style="margin-right: 5px !important;" id="receiverName" data-receiverId="">Adam Finn</h6>
                        </div>
                        <div class="col-xs-6 options text-right pr-2">
                            <i class="fa fa-times close-chat-box" style="float: left;margin-left: 10px;margin-top: 5px;" aria-hidden="true"></i>
                            <i class="fa fa-minus hide-chat-box" style="float: left;margin-left: 10px;margin-top: 5px;" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                <div class="chat-content">
                    <div class="col-md-12 chats border">
                        <ul class="p-0">
                        </ul>
                    </div>
                    <div class="col-md-12 message-box border pl-2 pr-2 border-top-0">
                        <input type="text" id="messageInput" class="pl-0 pr-0 w-100" style="width: 90% !important;/* word-wrap: break-spaces;*/ border: solid 1px #555; border-radius: 15px;" placeholder="اكتب رسالة ..." />
                        <i class="fa fa-paper-plane" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}